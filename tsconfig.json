{
	"compileOnSave": true,
	"compilerOptions": {
		"outDir": "./build/",
		"module": "ESNext",
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"*": ["./src/*"]
		},
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"target": "es5",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"exclude": ["node_modules"],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}
